<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.javafx_hibernate.ui.controller.LoginController"
            prefWidth="400" prefHeight="300"
            minWidth="400" minHeight="300"
            maxWidth="400" maxHeight="300"
            style="-fx-background-image: url('/images/fondos/2358.jpg');
            -fx-background-size: cover;
            -fx-background-position: center center;
            -fx-background-repeat: no-repeat;">
    <center>
        <VBox spacing="10.0" alignment="CENTER"
              style="-fx-background-color: rgba(255,255,255,0.9);
            -fx-padding: 20;
            -fx-background-radius: 5;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Login" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsuario" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="ContraseÃ±a:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Ingresar" onAction="#onLogin"/>

            <Label fx:id="lblMensaje" textFill="red"/>
        </VBox>
    </center>

</BorderPane>

